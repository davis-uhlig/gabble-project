<header>
  <h1 class="login-header">Welcome To Gabble</h1>
</header>
<div class="login">
  <h3>Please Login With Your Username and Password</h3>
  {{#errors.username}}
  <p>{{msg}}</p>
  {{/errors.username}}
  {{#errors.password}}
  <p>{{msg}}</p>
  {{/errors.password}}
  {{#noMatch}}
  <p>{{message}}</p>
  {{/noMatch}}
  <form action="/{{id}}" method="post">
    <input class="login-form" type="text" name="username" placeholder="username"><br>
    <input class="login-form" type="password" name="password" placeholder='password'><br>
    <button id="login-submit" class="login-form" type="submit">Submit</button>
  </form>
  <h3>Don't Have an Account? Sign Up <a href="/createAccount">Here</a></h3>
</div>
